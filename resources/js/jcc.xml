<jcc>
    <jcc-section toggle="true" label="Job Confirmation Paperwork" info="Complete Set">
        <jcc-checkbox label="JCC Cover Sheet" info="This page"/>
        <jcc-checkbox label="VC (Vendor Confirmation)" info="This separate in-app VC page"/>
        <jcc-checkbox label="RFQ" info="Request For Quotation"/>
        <jcc-inline>
            <jcc-checkbox label="FCQ" info="Final Customer Quote" uploads="true"/>
            <jcc-datepicker label="Date FCQ Signed"/>
        </jcc-inline>
        <jcc-checkbox label="CC" info="Client Card" uploads="true"/>
        <jcc-checkbox label="JCW" info="Job Cost Worksheet"/>
        <jcc-checkbox label="VQ" info="Vendor Quotation" uploads="true">
            <jcc-inline>
                <jcc-checkbox label="Actual quote from vendor"/>
                <jcc-checkbox label="Alit's email(s)"/>
                <jcc-checkbox label="Markup spreadsheet"/>
                <jcc-text label="Vendor"/>
            </jcc-inline>
        </jcc-checkbox>

        <jcc-checkbox label="SQ" info="Shipper Quotation" uploads="true">
            <jcc-inline>
                <jcc-checkbox label="Actual quote from shipper"/>
                <jcc-checkbox label="Alice's rate chart"/>
                <jcc-checkbox label="Freight Calculator"/>
                <jcc-text label="Shipper"/>
            </jcc-inline>
        </jcc-checkbox>

        <jcc-inline>
            <jcc-checkbox label="Quotation From Additional Vendor" info="Prepress, Sourced Items, etc."/>
            <jcc-text label="Additional Vendor"/>
        </jcc-inline>
    </jcc-section>

    <jcc-section collapse="true" toggle="true" label="Reprint" info="Of a job we've previously printed">
        <jcc-checkbox label="History from client card"
                  info="App > Clients > Scroll to bottom to see list of reference numbers assosciated with that client)"/>
        <jcc-inline>
            <jcc-select dynamicField="project_references" label="Prior Job's Reference"/>
            <jcc-text label="Prior Job's Title" autopopulate="project_references"/>
        </jcc-inline>

        <jcc-checkbox label="History from JCW" info="App > Project > Final Invoice > JCW">
            <jcc-inline>
                <jcc-checkbox label="Client unit price"/>
                <jcc-text info="Client's base unit price, plus relevant AA amounts"/>
            </jcc-inline>
        </jcc-checkbox>
    </jcc-section>
</jcc>
